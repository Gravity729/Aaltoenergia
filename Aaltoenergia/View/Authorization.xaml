<Window x:Class="Aaltoenergia.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aaltoenergia.View"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Title="Authorization" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF6ECDCD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF45B2AD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Вход в аккаунт" VerticalAlignment="Top" 
               Width="Auto" Background="#FF8DC7C7" 
               Height="90" FontSize="20" HorizontalContentAlignment="Center"  
               VerticalContentAlignment="Center" />


        <StackPanel Grid.Row="1">
            <Label Content="Логин или номер телефона:" HorizontalAlignment="Left" Margin="250,25,0,0" VerticalAlignment="Bottom" FontFamily="Microsoft Yi Baiti" FontSize="14"/>

            <TextBox Style="{StaticResource RoundedTextBox}" HorizontalAlignment="Center" 
                TextWrapping="Wrap" VerticalAlignment="Bottom" Width="300" Height="45"/>
        </StackPanel>


        <StackPanel Grid.Row="2">
            <Label Content="Пароль:" HorizontalAlignment="Left" Margin="250,10,0,0" 
               VerticalAlignment="Top" FontFamily="Microsoft Yi Baiti" FontSize="14" />

            <PasswordBox Style="{StaticResource RoundedPasswordBox}" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Width="300" Height="45"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Click="Main_OnClick" Content="Назад" VerticalAlignment="Top" Width="150" Height="30" 
                FontSize="14" Margin="0,10,3,0" Grid.Row="3" BorderBrush="{x:Null}"/>

            <Button Click="Authorization_OnClick" Content="Войти" VerticalAlignment="Top" Width="150" Height="30" 
               FontSize="14" Margin="3,10,0,0" Grid.Row="3" BorderBrush="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
